<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="55dip"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/character_item_portrait"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/portrait_default"/>

    <LinearLayout
        android:id="@+id/character_item"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="fill_horizontal"
        android:paddingLeft="5dp"
        android:layout_weight="5">
        <TextView
            android:id="@+id/character_item_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="17dip"
            android:textColor="#444444"
            android:text="Character name"/>

        <TextView
            android:id="@+id/character_item_dm"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="bottom"
            android:textSize="12dip"
            android:textColor="#777777"
            android:text="Dungeon Master/Game name"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="right|fill_vertical|bottom"
        android:layout_weight="1">

        <TextView
            android:id="@+id/character_item_last_modified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textSize="12dip"
            android:textColor="#777777"
            android:text="Date"/>
        <TextView
            android:id="@+id/character_item_age"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:gravity="bottom"
            android:layout_weight="2"
            android:textSize="12dip"
            android:textColor="#777777"
            android:text="Age"/>

    </LinearLayout>
</LinearLayout>