<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="48dip">

    <ImageView
        android:id="@+id/class_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/class_default"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="fill_horizontal"
        android:paddingLeft="5dp"
        android:layout_weight="5">
        <TextView
            android:id="@+id/class_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="17dip"
            android:textColor="#444444"
            android:text="Class name"/>

        <TextView
            android:id="@+id/class_resource"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="bottom"
            android:textSize="12dip"
            android:textColor="#777777"
            android:text="Player's Handbook"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="right|fill_vertical|bottom"
        android:layout_weight="1">

        <TextView
            android:id="@+id/favored_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textSize="12dip"
            android:textColor="#777777"
            android:text="Favored Class"/>
        <TextView
            android:id="@+id/class_type"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:gravity="bottom"
            android:layout_weight="2"
            android:textSize="12dip"
            android:textColor="#777777"
            android:text="Core"/>

    </LinearLayout>
</LinearLayout>