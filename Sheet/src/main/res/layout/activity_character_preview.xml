<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nulldomain.sheet.CharacterPreview">

    <ImageView
        android:id="@+id/character_preview_portrait"
        android:layout_width="fill_parent"
        android:layout_height="200dip"
        android:background="#cfcfcf"
        android:src="@drawable/portrait_default"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ececec">
        <TextView
            android:id="@+id/character_preview_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="16dp"
            android:background="#000000"
            android:textColor="#ffff00"
            android:textStyle="bold"
            android:text="6"/>
        <TextView
            android:id="@+id/character_preview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="16dp"
            android:textColor="#544554"
            android:text="Character name"/>
    </LinearLayout>
    <ListView
        android:id="@+id/character_preview_classes"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
