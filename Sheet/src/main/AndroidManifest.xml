<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nulldomain.sheet" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.nulldomain.sheet.Dashboard"
            android:label="@string/title_activity_dashboard" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nulldomain.sheet.CharacterPreview"
            android:label="@string/title_activity_character_preview"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.nulldomain.sheet.character.CharacterDetail"
            android:label="@string/title_activity_character_detail" >
        </activity>
    </application>

</manifest>
